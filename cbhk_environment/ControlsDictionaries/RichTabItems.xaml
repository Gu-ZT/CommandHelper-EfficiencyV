                            BorderThickness="0"
                            FontWeight="Normal"
                            Foreground="Transparent"
                            PressedBackground="{StaticResource CloseButtonHightLight}"
                            Style="{DynamicResource IconTextButton}"
                            Visibility="Hidden">
                            <ity:Interaction.Triggers>
                                <ity:EventTrigger EventName="Click">
                                    <itn:CallMethodAction MethodName="CloseRichTabItemsClick" TargetObject="{Binding}" />
                                </ity:EventTrigger>
                            </ity:Interaction.Triggers>
                        </CustomControls:IconTextButtons>
                        <ContentPresenter
                            x:Name="contentPresenter"
