    <Grid>
        <!--  {Binding FunctionEditorZoneVisibility, Mode=OneWay}  -->
        <Grid Visibility="{Binding FunctionEditorZoneVisibility, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="15*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition MinWidth="1" MaxWidth="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Height="30"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <CustomControls:IconTextButtons
                    Width="55"
                    Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DockPanel}, Path=ActualHeight}"
                    Margin="5,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ReturnCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local_window:CommonWindow}}"
                    ContentColor="White"
                    ContentData="ESC"
                    ContentHeight="20"
                    ContentWidth="30"
                    Cursor="Hand"
                    FontSize="15"
                    IconColor="White"
                    IconData="M268.8 480L633.6 149.333333c17.066667-14.933333 44.8-14.933333 59.733333 2.133334 6.4 8.533333 10.666667 19.2 10.666667 29.866666v661.333334c0 23.466667-19.2 42.666667-42.666667 42.666666-10.666667 0-21.333333-4.266667-27.733333-10.666666l-362.666667-330.666667c-17.066667-14.933333-19.2-42.666667-2.133333-59.733333-2.133333-2.133333 0-2.133333 0-4.266667z"
                    IconHeight="20"
                    IconWidth="20"
                    Style="{DynamicResource IconTextButton}"
                    ToolTip="返回主页"
                    ToolTipService.InitialShowDelay="0" />
                <CustomControls:IconTextButtons
                    Width="50"
                    Height="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DockPanel}, Path=ActualHeight}"
                    Margin="5,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding RunCommand}"
                    ContentColor="White"
                    ContentData="F5"
                    ContentHeight="20"
                    ContentWidth="25"
                    Cursor="Hand"
                    FontSize="15"
                    IconColor="White"
                    IconData="M755.2 544L390.4 874.666667c-17.066667 14.933333-44.8 14.933333-59.733333-2.133334-6.4-8.533333-10.666667-19.2-10.666667-29.866666v-661.333334c0-23.466667 19.2-42.666667 42.666667-42.666666 10.666667 0 21.333333 4.266667 27.733333 10.666666l362.666667 330.666667c17.066667 14.933333 19.2 42.666667 2.133333 59.733333 2.133333 2.133333 0 2.133333 0 4.266667z"
                    IconHeight="20"
                    IconMargin="0,0,0,0"
                    IconWidth="20"
                    Style="{DynamicResource IconTextButton}"
                    ToolTip="运行"
                    ToolTipService.InitialShowDelay="0" />
                <CustomControls:IconCheckBoxs
                    Width="90"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="生成覆盖"
                    FontSize="15"
                    Foreground="White"
                    HeaderHeight="20"
                    HeaderWidth="20"
                    IsChecked="{Binding OverLying, Mode=OneWayToSource}"
                    Style="{DynamicResource IconCheckBox}" />
                <CustomControls:IconTextButtons
                    Width="25"
                    Height="25"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    IconColor="#FF226A82"
                    IconData="M512 128c212 0 384 172 384 384s-172 384-384 384-384-172-384-384 172-384 384-384m0-64C264.8 64 64 264.8 64 512s200.8 448 448 448 448-200.8 448-448S759.2 64 512 64z m32 704h-64v-64h64v64z m11.2-203.2l-5.6 4.8c-3.2 2.4-5.6 8-5.6 12.8v58.4h-64v-58.4c0-24.8 11.2-48 29.6-63.2l5.6-4.8c56-44.8 83.2-68 83.2-108C598.4 358.4 560 320 512 320c-49.6 0-86.4 36.8-86.4 86.4h-64C361.6 322.4 428 256 512 256c83.2 0 150.4 67.2 150.4 150.4 0 72.8-49.6 112.8-107.2 158.4z"
                    IconHeight="25"
                    IconWidth="25"
                    Style="{DynamicResource IconTextButton}"
                    ToolTip="开启生成覆盖后生成结果将覆盖掉上一次的记录"
                    ToolTipService.InitialShowDelay="0"
                    ToolTipService.ShowDuration="3000" />
            </DockPanel>
            <RichTextBox
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,5,0"
                HorizontalAlignment="Stretch"
                Panel.ZIndex="0"
                Background="Transparent"
                BorderBrush="#3D3D3D"
                CaretBrush="White"
                FontSize="25"
                Foreground="#A8A8A8"
                Visibility="Visible">
                <ity:Interaction.Triggers>
                    <ity:EventTrigger EventName="TextChanged">
                        <itn:CallMethodAction MethodName="RichTextBox_TextChanged" TargetObject="{Binding}" />
                    </ity:EventTrigger>
                </ity:Interaction.Triggers>
                <CustomControls:EnabledFlowDocument FontFamily="Minecraft" LineHeight="5" />
            </RichTextBox>
            <GridSplitter
                Grid.Row="1"
                Grid.Column="1"
                Width="5"
                Background="#1F1F1F" />
            <TreeView
                Grid.Row="1"
                Grid.Column="2"
                MinWidth="200"
                Background="#1F1F1F"
                BorderBrush="#3D3D3D"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                Style="{DynamicResource TreeViewWithScrollBar}">
                <ity:Interaction.Triggers>
                    <ity:EventTrigger EventName="Loaded">
                        <itn:CallMethodAction MethodName="ContentViewLoaded" TargetObject="{Binding}" />
                    </ity:EventTrigger>
                </ity:Interaction.Triggers>
            </TreeView>
        </Grid>
        <!--  {Binding InitPageVisibility, Mode=OneWay}  -->
        <DockPanel Panel.ZIndex="1" Visibility="{Binding InitPageVisibility, Mode=OneWay}">
            <StackPanel
                Width="420"
                MinWidth="420"
                Margin="40,30,0,0"
                HorizontalAlignment="Left">
                <TextBlock
                    FontSize="30"
                    Foreground="White"
                    Text="打开近期使用的内容" />
                <TextBox
                    Width="322"
                    Height="35"
                    Margin="0,30,0,30"
                    Padding="0,2,0,0"
                    HorizontalAlignment="Left"
                    BorderBrush="#424242"
                    CaretBrush="White"
                    FontSize="25"
                    Foreground="White">
                    <TextBox.Resources>
                        <VisualBrush
                            x:Key="BackgroundBrush"
                            AlignmentX="Left"
                            AlignmentY="Center"
                            Stretch="None"
                            TileMode="Tile">
                            <VisualBrush.Visual>
                                <TextBlock
                                    Background="Transparent"
                                    FontSize="15"
                                    Foreground="#D6D6D6"
                                    Text="搜索最近使用的内容" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </TextBox.Resources>
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="Transparent" />
                            <Style.Triggers>
                                <!--<Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                                </Trigger>-->
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TreeView
                    MaxHeight="420"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="20"
                    Foreground="White"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Style="{DynamicResource TreeViewWithScrollBar}"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    VirtualizingStackPanel.VirtualizationMode="Recycling">
                    <ity:Interaction.Triggers>
                        <ity:EventTrigger EventName="Loaded">
                            <itn:CallMethodAction MethodName="RecentFilesViewLoaded" TargetObject="{Binding}" />
                        </ity:EventTrigger>
                    </ity:Interaction.Triggers>
                </TreeView>
            </StackPanel>
            <StackPanel
                Width="550"
                MaxWidth="550"
                Margin="50,30,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <TextBlock
                    Margin="25,0,0,10"
                    FontSize="30"
                    Foreground="White"
                    Text="开始使用" />
                <StackPanel Width="500" Margin="0,0,0,10">
                    <CustomControls:IconTextButtons
                        Height="100"
                        Panel.ZIndex="0"
                        Background="#383838"
                        ContentColor="White"
                        ContentData="打开本地项目"
                        ContentHeight="100"
                        ContentMargin="-100 10 30 0"
                        ContentWidth="600"
                        FontSize="40"
                        Style="{DynamicResource IconTextButton}" />
                    <TextBlock
                        Margin="80,-40,0,0"
                        Panel.ZIndex="1"
                        Cursor="Hand"
                        FontSize="20"
                        Foreground="White"
                        Text="打开本地.datapack文件" />
                </StackPanel>
                <StackPanel Width="500" Margin="0,0,0,10">
                    <CustomControls:IconTextButtons
                        Height="100"
                        Panel.ZIndex="0"
                        Background="#383838"
                        ContentColor="White"
                        ContentData="打开本地文件夹"
                        ContentHeight="100"
                        ContentMargin="-80 10 30 0"
                        ContentWidth="600"
                        FontSize="40"
                        Style="{DynamicResource IconTextButton}" />
                    <TextBlock
                        Margin="80,-40,0,0"
                        Panel.ZIndex="1"
                        FontSize="20"
                        Foreground="White"
                        Text="导航和编辑mc相关文件夹中的数据包文件" />
                </StackPanel>
                <StackPanel Width="500" Margin="0,0,0,10">
                    <CustomControls:IconTextButtons
                        Height="100"
                        Panel.ZIndex="0"
                        Background="#383838"
                        ContentColor="White"
                        ContentData="创建新的数据包"
                        ContentHeight="100"
                        ContentMargin="-80 10 30 0"
                        ContentWidth="600"
                        FontSize="40"
                        Style="{DynamicResource IconTextButton}" />
                    <TextBlock
                        Margin="80,-40,0,0"
                        Panel.ZIndex="1"
                        FontSize="20"
                        Foreground="White"
                        Text="选择具有代码基架的数据包模板以开始" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</local_window:CommonWindow>
