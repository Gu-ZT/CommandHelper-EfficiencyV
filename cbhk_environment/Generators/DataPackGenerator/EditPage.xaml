                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Enter" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      回到行首" />
                                <Border
                                    Width="60"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Home" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      跳到行尾" />
                                <Border
                                    Width="50"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="End" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      快速查找" />
                                <Border
                                    Width="55"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="F" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      快速替换" />
                                <Border
                                    Width="55"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
