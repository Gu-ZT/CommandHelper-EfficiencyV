                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="H" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      复制一行" />
                                <Border
                                    Width="55"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="D" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="      选定内容转为大写" />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Shift" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="U" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="      选定内容转为小写" />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="U" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="              注释选定内容" />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="K" />
                                </Border>
                                <Run Foreground="White" Text="," />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="C" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="              取消注释选定内容" />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="K" />
                                </Border>
                                <Run Foreground="White" Text="," />
                                <Border
                                    Width="50"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
