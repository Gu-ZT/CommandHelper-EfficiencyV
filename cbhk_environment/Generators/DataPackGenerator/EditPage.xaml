<Page
    x:Class="cbhk_environment.Generators.DataPackGenerator.EditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControls="clr-namespace:cbhk_environment.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:itn="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:ity="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:cbhk_environment.Generators.DataPackGenerator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <ImageBrush x:Key="LeftArrow" ImageSource="/cbhk_environment;component/resources/common/images/IconArrowLeft.png" />
        <ImageBrush x:Key="RightArrow" ImageSource="/cbhk_environment;component/resources/common/images/IconArrowRight.png" />
    </Page.Resources>

    <Grid Panel.ZIndex="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition MinWidth="1" MaxWidth="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Height="30"
            Margin="0,5,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <CustomControls:IconTextButtons
                Width="16"
                Height="16"
                Margin="5,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{StaticResource LeftArrow}"
                BorderThickness="0"
                Command="{Binding ReturnCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                FontSize="15"
                Style="{DynamicResource IconTextButton}"
                ToolTip="ESC:返回主页"
                ToolTipService.InitialShowDelay="0" />
            <CustomControls:IconTextButtons
                Width="16"
                Height="16"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="{StaticResource RightArrow}"
                BorderThickness="0"
                Command="{Binding RunCommand}"
                FontSize="15"
                Style="{DynamicResource IconTextButton}"
                ToolTip="保存"
                ToolTipService.InitialShowDelay="0" />
        </DockPanel>
        <TabControl
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,5,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            BorderBrush="#3D3D3D"
            Style="{DynamicResource TabControlWithScrollBar}">
            <ity:Interaction.Triggers>
                <ity:EventTrigger EventName="Loaded">
                    <itn:CallMethodAction MethodName="FileModifyZoneLoaded" TargetObject="{Binding}" />
                </ity:EventTrigger>
            </ity:Interaction.Triggers>
            <CustomControls:RichTabItems
                Uid="DemonstrationPage"
                Padding="10,2,0,0"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Bottom"
                FontSize="12"
                Foreground="#FFFFFF"
                Header="欢迎使用"
                IsContentSaved="True"
                Style="{DynamicResource RichTabItemStyle}">
                <ScrollViewer Style="{DynamicResource DefaultScrollViewer}">
                    <RichTextBox
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        Background="#1A1A1A"
                        BorderBrush="#3D3D3D"
                        BorderThickness="1"
                        CaretBrush="White"
                        FontSize="15"
                        Foreground="White"
                        HorizontalScrollBarVisibility="Disabled"
                        IsReadOnly="True"
                        VerticalScrollBarVisibility="Disabled">
                        <CustomControls:EnabledFlowDocument LineHeight="10">
                            <Paragraph Padding="0,10,0,0" TextAlignment="Center">
                                <Run
                                    FontSize="20"
                                    Foreground="#7160E8"
                                    Text="欢迎使用数据包生成器" />
                            </Paragraph>
                            <Paragraph Padding="0,10,0,0" TextAlignment="Left">
                                <Run
                                    FontSize="20"
                                    Foreground="Gray"
                                    Text="  功能" />
                            </Paragraph>
                            <Paragraph TextAlignment="Left">
                                <Run
                                    FontSize="20"
                                    Foreground="Gray"
                                    Text="  1.语法补全" />
                                <Run
                                    FontSize="20"
                                    Foreground="Gray"
                                    Text="  2.快捷操作" />
                                <Run
                                    FontSize="20"
                                    Foreground="Gray"
                                    Text="  3.快速生成.mcfunction文件" />
                            </Paragraph>
                            <Paragraph
                                Padding="0,10,0,0"
                                FontSize="20"
                                Foreground="Gray"
                                TextAlignment="Left">
                                <Run Text="  快捷键列表" />
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="  上下移动选定行内容" />
                                <Border
                                    Width="40"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Alt" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="40"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="25"
                                        Foreground="#D7D7D7"
                                        Text="↑" />
                                </Border>
                                <Run Foreground="White" Text="/" />
                                <Border
                                    Width="40"
                                    Height="20"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="25"
                                        Foreground="#D7D7D7"
                                        Text="↓" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                  打开补全框" />
                                <Border
                                    Width="45"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Ctrl" />
                                </Border>
                                <Run Foreground="White" Text="+" />
                                <Border
                                    Width="65"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Space" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      执行补全" />
                                <Border
                                    Width="45"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Background="#494949"
                                    BorderBrush="#737373"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#D7D7D7"
                                        Text="Tab" />
                                </Border>
                            </Paragraph>
                            <Paragraph Foreground="Gray" TextAlignment="Left">
                                <Run Text="                      切换页面" />
