                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding Armor, Mode=TwoWay}" />
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="护甲韧性" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="200"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding ArmorToughness, Mode=TwoWay}" />
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                            </CustomControls:CollapsableGrids>
                        </StackPanel>
                    </Border>
                </CustomControls:CollapsableGrids>
