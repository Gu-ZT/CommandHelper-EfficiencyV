                                Height="30"
                                HorizontalAlignment="Left"
                                ArrowForeground="White"
                                ArrowHeight="25"
                                ArrowWidth="25"
                                Background="Transparent"
                                Foreground="White"
                                MaxValue="2147483647"
                                MinValue="-2147483648"
                                Template="{DynamicResource ColorNumbericUpDown}"
                                Text="{Binding Health, Mode=TwoWay}" />
                            <TextBlock
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="White"
                                Text="Tags" />
                            <TextBox
                                Width="100"
                                Margin="5,0"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                BorderBrush="Black"
                                FontSize="15"
                                Foreground="White"
                                Text="{Binding Tags, Mode=TwoWay}" />
                        </DockPanel>
                        <DockPanel Height="30" Background="#2F2F2F">
                            <TextBlock
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="White"
                                Text="Motion" />
                            <CustomControls:ColorNumbericUpDowns
                                Width="100"
                                HorizontalAlignment="Left"
                                ArrowForeground="White"
                                ArrowHeight="25"
                                ArrowWidth="25"
                                Background="Transparent"
                                Foreground="White"
                                MaxValue="2147483647"
                                MinValue="-2147483648"
                                Template="{DynamicResource ColorNumbericUpDown}"
                                Text="{Binding MotionX, Mode=TwoWay}" />
                            <CustomControls:ColorNumbericUpDowns
                                Width="100"
                                HorizontalAlignment="Left"
                                ArrowForeground="White"
                                ArrowHeight="25"
                                ArrowWidth="25"
                                Background="Transparent"
                                Foreground="White"
                                MaxValue="2147483647"
                                MinValue="-2147483648"
                                Template="{DynamicResource ColorNumbericUpDown}"
                                Text="{Binding MotionY, Mode=TwoWay}" />
                            <CustomControls:ColorNumbericUpDowns
                                Width="100"
                                HorizontalAlignment="Left"
                                ArrowForeground="White"
                                ArrowHeight="25"
                                ArrowWidth="25"
                                Background="Transparent"
                                Foreground="White"
                                MaxValue="2147483647"
                                MinValue="-2147483648"
                                Template="{DynamicResource ColorNumbericUpDown}"
                                Text="{Binding MotionZ, Mode=TwoWay}" />
                            <TextBlock
                                Margin="5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="White"
                                Text="队伍" />
                            <TextBox
                                Width="140"
                                Margin="5,0"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                BorderBrush="Black"
                                FontSize="15"
                                Foreground="White"
                                Text="{Binding Team, Mode=TwoWay}" />
                        </DockPanel>
                        <DockPanel Height="30" Background="#2F2F2F">
                            <TextBlock
                                Margin="5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Foreground="White"
                                Text="燃烧状态" />
                            <CustomControls:ColorNumbericUpDowns
                                Width="100"
                                HorizontalAlignment="Left"
                                ArrowForeground="White"
                                ArrowHeight="25"
                                ArrowWidth="25"
                                Background="Transparent"
                                Foreground="White"
                                MaxValue="2147483647"
                                MinValue="-2147483648"
                                Template="{DynamicResource ColorNumbericUpDown}"
                                Text="{Binding Fire, Mode=TwoWay}" />
                        </DockPanel>
                        <DockPanel Height="30" Background="#2F2F2F">
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="无敌"
                                HeaderWidth="15"
                                IsChecked="{Binding Invulnerable, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="NoAI"
                                HeaderWidth="15"
                                IsChecked="{Binding NoAI, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="发光"
                                HeaderWidth="15"
                                IsChecked="{Binding Glowing, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="无重力"
                                HeaderWidth="15"
                                IsChecked="{Binding NoGravity, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="可拾取物品"
                                HeaderWidth="15"
                                IsChecked="{Binding CanPickUpLoot, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="无声"
                                HeaderWidth="15"
                                IsChecked="{Binding Silent, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                            <CustomControls:TextCheckBoxs
                                Margin="0,0,5,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                Foreground="White"
                                HeaderHeight="15"
                                HeaderText="不被自然刷新"
                                HeaderWidth="15"
                                IsChecked="{Binding PersistenceRequired, Mode=TwoWay}"
                                Style="{DynamicResource TextCheckBox}" />
                        </DockPanel>
                    </StackPanel>
                </CustomControls:CollapsableGrids>
                <CustomControls:CollapsableGrids
                    Margin="2,0"
                    Background="#FF00B3FF"
                    Cursor="Hand"
                    FontSize="15"
                    Foreground="White"
                    Header="特殊"
                    IsExpanded="False"
                    Style="{DynamicResource CollapsableGrid}">
                    <StackPanel />
                </CustomControls:CollapsableGrids>
                <CustomControls:CollapsableGrids
                    Margin="2,0"
                    Background="#FF00B3FF"
                    Cursor="Hand"
                    FontSize="15"
                    Foreground="White"
                    Header="数据"
                    IsExpanded="True"
                    Style="{DynamicResource CollapsableGrid}">
                    <Border Background="#2F2F2F">
                        <StackPanel>
                            <DockPanel>
                                <TextBlock
                                    Margin="2.5,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="实体ID" />
                                <CustomControls:IconComboBoxs
                                    Width="220"
                                    Height="30"
                                    HorizontalAlignment="Left"
                                    Foreground="White"
                                    SelectedItem="{Binding EntityId, Mode=TwoWay}"
                                    Style="{DynamicResource ComboBoxWithIcon}">
                                    <ity:Interaction.Triggers>
                                        <ity:EventTrigger EventName="Loaded">
                                            <itn:CallMethodAction MethodName="EntityIdsLoaded" TargetObject="{Binding}" />
                                        </ity:EventTrigger>
                                    </ity:Interaction.Triggers>
                                </CustomControls:IconComboBoxs>
                            </DockPanel>
                            <CustomControls:CollapsableGrids
                                Margin="2,0"
                                Background="#FF00B3FF"
                                Cursor="Hand"
                                FontSize="15"
                                Foreground="White"
                                Header="属性"
                                IsExpanded="True"
                                Style="{DynamicResource CollapsableGrid}">
                                <Border Background="#2F2F2F">
                                    <StackPanel>
                                        <DockPanel>
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="最大生命值" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="185"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding MaxHealth, Mode=TwoWay}" />
                                            <TextBlock
                                                Margin="5,0,20,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="抗击退" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="200"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding KnockbackResistance, Mode=TwoWay}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="移动速度" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="200"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding MovementSpeed, Mode=TwoWay}" />
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="跟踪距离" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="200"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding FollowRange, Mode=TwoWay}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="攻击伤害" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="200"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding AttackDamage, Mode=TwoWay}" />
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="攻击速度" />
                                            <CustomControls:ColorNumbericUpDowns
                                                Width="200"
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                ArrowForeground="White"
                                                ArrowHeight="25"
                                                ArrowWidth="25"
                                                Background="Transparent"
                                                Foreground="White"
                                                MaxValue="2147483647"
                                                MinValue="-2147483648"
                                                Template="{DynamicResource ColorNumbericUpDown}"
                                                Text="{Binding AttackSpeed, Mode=TwoWay}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock
                                                Margin="20,0,20,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Text="护甲" />
