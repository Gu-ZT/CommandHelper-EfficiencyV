                    Background="#FF00B3FF"
                    Cursor="Hand"
                    FontSize="15"
                    Foreground="White"
                    Header="外观"
                    IsExpanded="False"
                    Style="{DynamicResource CollapsableGrid}">
                    <Border Background="#2F2F2F">
                        <StackPanel Margin="2,0,0,0">
                            <CustomControls:CollapsableGrids
                                Margin="4,0"
                                Background="#FF00B3FF"
                                Cursor="Hand"
