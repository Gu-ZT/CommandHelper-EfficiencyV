                    <Grid x:Name="LayoutRoot" Background="#2F2F2F">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Width="65"
                            Height="45"
                            Panel.ZIndex="1"
                            Background="{StaticResource BorderTopLeft}" />
                        <Grid
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Width="20"
                            Margin="0,30,0,30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Panel.ZIndex="0"
                            Background="{StaticResource BorderLeft}" />
                        <Grid
                            Grid.Row="2"
                            Grid.Column="0"
                            Width="38"
                            Height="38"
                            HorizontalAlignment="Left"
                            Panel.ZIndex="1"
                            Background="{StaticResource BorderBottomLeft}" />
                        <Grid
                            Grid.Row="0"
                            Grid.Column="2"
                            Width="85"
                            Height="45"
                            HorizontalAlignment="Left"
                            Panel.ZIndex="1"
                            Background="{StaticResource BorderTopRight}">
                            <StackPanel
                                x:Name="WindowCommandButtonsStackPanel"
                                Grid.Column="1"
                                Margin="0,21,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                Orientation="Horizontal"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                                <Button
                                    x:Name="Minimize"
                                    Width="15"
                                    Height="15"
                                    Margin="-21,2,0,0"
                                    HorizontalAlignment="Left"
                                    Panel.ZIndex="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding Source={x:Static SystemCommands.MinimizeWindowCommand}}"
                                    ContentTemplate="{StaticResource MinimizeWhite}"
                                    IsTabStop="False"
                                    WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource MinimizeHover}" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource MinimizeHover}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Grid
                                    Margin="0,3,44.7,0"
                                    HorizontalAlignment="Left"
                                    Panel.ZIndex="1"
                                    Background="Transparent"
                                    IsEnabled="False">
                                    <Button
                                        x:Name="Restore"
                                        Background="Transparent"
                                        Command="{Binding Source={x:Static SystemCommands.RestoreWindowCommand}}"
                                        ContentTemplate="{StaticResource RestoreWhite}"
                                        IsTabStop="False"
                                        Style="{StaticResource TitleBarButtonStyle}"
                                        Visibility="Collapsed"
                                        WindowChrome.IsHitTestVisibleInChrome="True" />
                                    <Button
                                        x:Name="Maximize"
                                        Width="15"
                                        Height="15"
                                        Background="Transparent"
                                        Command="{Binding Source={x:Static SystemCommands.MaximizeWindowCommand}}"
                                        ContentTemplate="{StaticResource MaximizeWhite}"
                                        IsTabStop="False"
                                        Style="{StaticResource TitleBarButtonStyle}"
                                        WindowChrome.IsHitTestVisibleInChrome="True" />
                                </Grid>
                                <Button
                                    x:Name="Close"
                                    Width="15"
                                    Height="15"
                                    Margin="-38,2,0,0"
                                    HorizontalAlignment="Left"
                                    Panel.ZIndex="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding Source={x:Static SystemCommands.CloseWindowCommand}}"
                                    ContentTemplate="{StaticResource CloseWhite}"
                                    IsTabStop="False"
                                    WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource CloseHover}" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource CloseHover}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Grid
                            x:Name="TitleStack"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Height="22"
                            Margin="20,0,50,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Panel.ZIndex="0"
                            Background="{StaticResource BorderTop}" />
                        <Grid
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="2"
                            Width="20.5"
                            Margin="0,20,0,20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Panel.ZIndex="0"
                            Background="{StaticResource BorderRight}" />
                        <Grid
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Height="20.5"
                            Margin="20,0,20,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="0"
                            Background="{StaticResource BorderBottom}" />
                        <Grid
                            Grid.Row="2"
                            Grid.Column="2"
                            Width="38"
                            Height="38"
                            HorizontalAlignment="Right"
                            Panel.ZIndex="1"
                            Background="{StaticResource BorderBottomRight}" />
                        <ContentPresenter
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="-45,1,-65,1"
                            Panel.ZIndex="2" />
                        <ResizeGrip
                            x:Name="ResizeGrip"
                            Grid.Row="2"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            IsTabStop="False"
                            Style="{DynamicResource HollowResizeGrip}"
                            Visibility="Hidden"
                            WindowChrome.ResizeGripDirection="BottomRight" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsActive" Value="False">
                            <Setter Property="BorderBrush" Value="#FF6F7785" />
                        </Trigger>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="Maximize" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Restore" Property="Visibility" Value="Visible" />
                            <Setter TargetName="LayoutRoot" Property="Margin" Value="7" />
                        </Trigger>
                        <Trigger Property="WindowState" Value="Normal">
                            <Setter TargetName="Maximize" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Restore" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="ResizeMode" Value="NoResize">
                            <Setter TargetName="Minimize" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Maximize" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="Restore" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ResizeMode" Value="CanResizeWithGrip" />
                                <Condition Property="WindowState" Value="Normal" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="ResizeGrip" Property="Visibility" Value="Visible" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>